<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/background"
    tools:context="hcmute.it.danpham.tlcn_v1.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:id="@+id/layoutMain"
        android:animateLayoutChanges="false"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


    <Button
        android:text="Bắt đầu"
        android:layout_width="205dp"
        android:background="@drawable/custom_btn"
        android:textAllCaps="false"
        android:textSize="20dp"

        android:layout_height="wrap_content"

        android:id="@+id/btnBatDau"
        android:layout_marginTop="224dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="Điểm cao"
        android:layout_width="205dp"
        android:background="@drawable/custom_btn"
        android:textAllCaps="false"
        android:textSize="20dp"

        android:layout_height="wrap_content"

        android:id="@+id/btnDiemCao"
        android:layout_marginTop="295dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="Đánh giá"
        android:layout_width="205dp"
        android:background="@drawable/custom_btn"
        android:textAllCaps="false"
        android:textSize="20dp"

        android:layout_height="wrap_content"

        android:id="@+id/btnChuaDat"
        android:layout_marginTop="366dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="Button"
        android:layout_width="205dp"
        android:background="@drawable/custom_btn"
        android:textAllCaps="false"
        android:textSize="20dp"

        android:layout_height="wrap_content"

        android:id="@+id/btnChuaDat2"
        android:layout_marginTop="437dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <include
        layout="@layout/layout_cau_hoi"
        android:id="@+id/layoutCauHoi"
        android:visibility="gone">
    </include>


</android.support.constraint.ConstraintLayout>
